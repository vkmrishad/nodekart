<!DOCTYPE html>
<html class="no-js" lang="">


<head>

    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>NodeKart - Cart</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Montserrat:400,700">
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:300,400,700,400italic,700italic&amp;subset=latin,vietnamese">

    <link rel="stylesheet" href="../../../../front-end/css/bootstrap.css">

    <link rel="stylesheet" href="../../../../front-end/css/plugins.css">

    <link rel="stylesheet" href="../../../../front-end/css/styles.css">

    <script src="../../../../front-end/js/vendor.js"></script>

    <script>
        window.SHOW_LOADING = true;
    </script>

</head>

<body>

    <div id="wrapper" class="main-wrapper ">

     {{> shop/header}}
     <!-- /.awe-menubar-header -->


        <div id="main">

            <div class="main-header background background-image-heading-checkout">
                <div class="container">
                    <h1>Checkout</h1>
                </div>
            </div>


            <div id="breadcrumb">
                <div class="container">
                    <ol class="breadcrumb">
                        <li><a href="#">Home</a>
                        </li>
                        <li class="active"><span>Checkout</span>
                        </li>
                    </ol>

                </div>
            </div>


            <form action="" method="POST">
                <div class="checkout-wrapper">
                    <div class="container">

                        <div class="text-alert">
                            {{#if user}}
                            
                            {{else}}
                            <p>Returning customer? <a href="#">Click here to login</a>
                            </p>
                            {{/if}}
                        </div>
                        <!-- /.text-alert -->

                        <div class="row">

                          <div class="col-md-12">
                              <div class="payment-right" style="padding: 0px;">

                                  <div class="payment-detail-wrapper">
                                      <ul class="cart-list">
                               {{#each cart.products}}
                                          <li>
                                              <div class="cart-item">
                                                  <div class="product-image">
                                                      <a href="#" title="">
                                                          <img src="../../../../uploads/products/{{id}}/{{image.[0].img}}" alt="">
                                                      </a>
                                                  </div>

                                                  <div class="product-body">
                                                      <div class="product-name">
                                                        <h3>
                                                        <a href="#" title="">{{name}}</a>
                                                        </h3>
                                                      </div>

                                                      <div class="product-price">
                                                          <span>&#8377 {{price}} x {{quantity}} &nbsp; = &nbsp; &#8377 
                                                          <script>
                                                          x={{price}}*{{quantity}};
                                                          document.write(x);
                                                          </script></span>
                                                      </div>
                                                  </div>
                                              </div>
                                              <!-- /.cart-item -->

                                              <a href="#" title="" class="remove-cart">
                                                  <span class="icon icon-remove"></span>
                                              </a>
                                          </li>
                               {{/each}}
                                      </ul>
                                      <!-- /.cart-list -->
                                  </div>
                                  <!-- /.payment-detail-wrapper -->

                              </div>
                          </div>

                            <div class="col-md-3" style="float:right">
                            <!--
                              <div class="alert alert-dark">
                                  <p>You have a coupon? <strong><a href="#" title="">Click here to enter your code</a></strong>
                                  </p>
                              </div>
                            -->  
                              <!-- /.alert -->

                              <div class="cart-total">
                                  <table>
                                      <tbody>
                                          <tr class="cart-subtotal">
                                              <th>Cart Subtotal:</th>
                                              <td><span class="amount">&#8377 {{cart.total}}</span>
                                              </td>
                                          </tr>
                                          <tr class="shipping">
                                              <th>Shipping:</th>
                                              <td>&#8377 0.0</td>
                                          </tr>
                                          <tr class="order-total">
                                              <th>Order Total:</th>
                                              <td><strong><span class="amount">&#8377 {{cart.total}}</span></strong>
                                              </td>
                                          </tr>
                                      </tbody>
                                  </table>

                                  <center>
                                  {{#if user}}

                                  <a class="btn btn-lg btn-primary">Proceed to Payment</a>

                                  {{else}}

                                  <a class="btn btn-lg btn-primary">Login to Continue</a>

                                  {{/if}}

                                  </center>

                              </div>
                              <!-- /.cart-total -->
                            </div>

                      </div>
                    </div>
                    <!-- /.container -->
                </div>
                <!-- /.checkout-wrapper -->
            </form>

        </div>


      {{> shop/footer}}

        <!-- /footer -->

    </div>
    <!-- /#wrapper -->


    <script src="http://maps.google.com/maps/api/js?sensor=true"></script>

    <script src="../../../../front-end/js/jquery-ui.min.1.11.4.js"></script>

    <script src="../../../../front-end/js/plugins.js"></script>

    <script src="../../../../front-end/js/main.js"></script>

    <script src="../../../../front-end/js/docs.js"></script>

</body>


</html>
