<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>NodeKart - Admin | Account</title>
  <!-- Tell the browser to be responsive to screen width -->
  <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
  <!-- Bootstrap 3.3.6 -->
  <link rel="stylesheet" href="../../bootstrap/css/bootstrap.min.css">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="../../../../dist/font-awesome/css/font-awesome.min.css">
  <!-- DataTables -->
  <link rel="stylesheet" href="../../plugins/datatables/dataTables.bootstrap.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="../../dist/css/AdminLTE.min.css">
  <!-- AdminLTE Skins. Choose a skin from the css/skins
       folder instead of downloading all of them to reduce the load. -->
  <link rel="stylesheet" href="../../dist/css/skins/_all-skins.min.css">
  <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
  <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
  <!--[if lt IE 9]>
  <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
  <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  {{> admin/header}}
  <!-- Left side column. contains the logo and sidebar -->
  {{> admin/sidebar-left}}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper" style="min-height: 1126px;">
    <!-- Content Header (Page header) -->
         {{#if success_msg}}
            <div class="alert alert-success">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="fa fa-check-square"></i>
                                <span>{{success_msg}}</span>
            </div>
          {{/if}}

          {{#if error_msg}}
          <div class="alert alert-danger">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="fa fa-exclamation-triangle"></i>
                                <span>{{error_msg}}</span>
            </div>
          {{/if}}

          {{#if error}}
            <div class="alert alert-danger">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <i class="fa fa-exclamation-triangle"></i>
                                <span>{{error}}</span>
            </div>
          {{/if}}

    <section class="content-header">
      <h1>
        User Account
      </h1>
      <ol class="breadcrumb">
        <li><a href="../../../../admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Account</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="row">
        <div class="col-md-3">

        {{> admin/account-sidebar}}

        </div>
        <!-- /.col -->
        <div class="col-md-8">
          <!-- Horizontal Form -->
          <div class="box box-info">
            <!-- form start -->
            <form class="form-horizontal">
              <div class="box-body">
                <div class="form-group">
                  <label class="col-sm-3 control-label">First Name</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control" value="{{user.fname}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">Middle Name</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control" value="{{user.mname}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">Last Name</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control" value="{{user.lname}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">Username</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control" value="{{user.username}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">Email</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.email}}" disabled>
                  </div>
                </div><br><br>


                <div class="form-group">
                  <label class="col-sm-3 control-label">Address Line 1</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.address1}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">Address Line 2</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.address2}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">Address Line 3</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.address3}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">City/Town</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.place}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">Landmark</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.landmark}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">District</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.district}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">State</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.state}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">Country</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.country}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">Pincode</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.pin}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">Phone Number</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.lnumber}}" disabled>
                  </div>
                </div>

                <div class="form-group">
                  <label class="col-sm-3 control-label">Mobile Number</label>

                  <div class="col-sm-8">
                    <input type="text" class="form-control"  value="{{user.mnumber}}" disabled>
                  </div>
                </div>

              </div>
              <br><br>
              <!-- /.box-body -->
              <div class="box-footer">
                <a href="../../../../admin" class="btn btn-default">Cancel</a>
                <a href="../../../../admin/account/edit" class="btn btn-info pull-right">Edit</a>
              </div>
              <!-- /.box-footer -->
            </form>
          </div>
          <!-- /.box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  {{> admin/footer }}
  
</div>
<!-- ./wrapper -->

<!-- jQuery 2.2.0 -->
<script src="../../plugins/jQuery/jQuery-2.2.0.min.js"></script>
<!-- Bootstrap 3.3.6 -->
<script src="../../bootstrap/js/bootstrap.min.js"></script>
<!-- DataTables -->
<script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
<script src="../../plugins/datatables/dataTables.bootstrap.min.js"></script>
<!-- SlimScroll -->
<script src="../../plugins/slimScroll/jquery.slimscroll.min.js"></script>
<!-- FastClick -->
<script src="../../plugins/fastclick/fastclick.js"></script>
<!-- AdminLTE App -->
<script src="../../dist/js/app.min.js"></script>
<!-- AdminLTE for demo purposes -->
<script src="../../dist/js/demo.js"></script>
<!-- page script -->
<script>
$(document).ready(function(){
      setTimeout(function() {
        $('.alert').fadeOut('fast');
      }, 4000); // <-- time in milliseconds
});
</script>
<script>
  $(function () {
    $("#example1").DataTable();
    $('#example2').DataTable({
      "paging": true,
      "lengthChange": false,
      "searching": false,
      "ordering": true,
      "info": true,
      "autoWidth": false
    });
  });
</script>
</body>
</html>
