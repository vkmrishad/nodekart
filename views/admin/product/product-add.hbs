<script>
$(document).ready(function() {
    

    $('#basicBootstrapForm').formValidation({
        framework: 'bootstrap',
        excluded: [':disabled'],
        icon: {
              valid: 'fa fa-check',
              invalid: 'fa fa-times',
              validating: 'fa fa-refresh'
        },
        fields: {
            name: {
                validators: {
                    notEmpty: {
                        message: 'Product is required'
                    }
                }
            },

            status: {
                validators: {
                    notEmpty: {
                        message: 'Status is required'
                    }
                }
            },


            short_description: {
                    validators: {
                        callback: {
                            message: 'Short Description is required and cannot be empty',
                            callback: function(value, validator, $field) {
                                var code = $('[name="short_description"]').summernote('code');
                                // <p><br></p> is code generated by Summernote for empty content
                                return (code !== '' && code !== '<p><br></p>');
                            }
                        }
                    }
            },


            gender: {
                validators: {
                  callback: {
                          message: 'Product Gender is required',
                          callback: function(value, validator, $field) {
                              // Get the selected options
                              var options = validator.getFieldElements('gender').val();
                              return (options != 'Select' );
                          }
                  }
                }
            },


            brand: {
                validators: {
                  callback: {
                          message: 'Brand is required',
                          callback: function(value, validator, $field) {
                              // Get the selected options
                              var options = validator.getFieldElements('brand').val();
                              return (options != 'Select' );
                          }
                  }
                }
            },

            category: {
                validators: {
                  callback: {
                          message: 'Brand is required',
                          callback: function(value, validator, $field) {
                              // Get the selected options
                              var options = validator.getFieldElements('category').val();
                              return (options != 'Select' );
                          }
                  }
                }
            },

            size: {
                validators: {
                  callback: {
                          message: 'Size is required',
                          callback: function(value, validator, $field) {
                              // Get the selected options
                              var options = validator.getFieldElements('size').val();
                              return (options != 'Select' );
                          }
                  }
                }
            },


            retail: {
                validators: {
                    notEmpty: {
                        message: 'Retail Price is required'
                    },
                    numeric: {
                            message: 'Not a valied Amount . Don\'t use ( , )',
                            // The default separators
                            thousandsSeparator:'',
                            decimalSeparator: '.'
                    }
                }
            },

            sale: {
                validators: {
                    notEmpty: {
                        message: 'Sale Price is required'
                    },
                    numeric: {
                            message: 'Not a valied Amount . Don\'t use ( , )',
                            // The default separators
                            thousandsSeparator:'',
                            decimalSeparator: '.'
                    }
                }
            },

            stock: {
                validators: {
                    notEmpty: {
                        message: 'Stock is required'
                    },
                    numeric: {
                            message: 'Not a valied Stock',
                            // The default separators
                            thousandsSeparator:'',
                            decimalSeparator: ''
                    }
                }
            }
  

        }
    })
    .find('[name="short_description"]')
                $('#summernote_1').summernote({
                  height: 100,                 // set editor height
                  minHeight: null,             // set minimum height of editor
                  maxHeight: null,             // set maximum height of editor
                  focus: false                  // set focus to editable area after initializing summernote
                })
                .on('summernote.change', function(customEvent, contents, $editable) {
                    // Revalidate the content when its value is changed by Summernote
                    $('#basicBootstrapForm').formValidation('revalidateField', 'short_description');
                })
    .find('[name="description"]')
                  $('#summernote_2').summernote({
                  height: 200,                 // set editor height
                  minHeight: null,             // set minimum height of editor
                  maxHeight: null,             // set maximum height of editor
                  focus: false                  // set focus to editable area after initializing summernote
                })
                .on('summernote.change', function(customEvent, contents, $editable) {
                    // Revalidate the content when its value is changed by Summernote
                    $('#basicBootstrapForm').formValidation('revalidateField', 'description');
                })
    .end();

});
</script>

<script>
$(document).ready(function(){
      setTimeout(function() {
        $('#flashMessage').fadeOut('fast');
      }, 4000); // <-- time in milliseconds
});
</script>

