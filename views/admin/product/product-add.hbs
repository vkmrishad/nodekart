  <script src="../../../../dist/summernote/summernote.js"></script>

  <script src="../../../../dist/formValidation/formValidation.min.js"></script>
  <script src="../../../../dist/formValidation/framework/bootstrap.min.js"></script>

</head>
<body class="hold-transition skin-blue sidebar-mini">
<div class="wrapper">

  {{> admin/header}}
  <!-- Left side column. contains the logo and sidebar -->
  {{> admin/sidebar-left}}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Add Product
      </h1>
      <ol class="breadcrumb">
        <li><a href="../../../../"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="../../../../products">Product</a></li>
        <li class="active">Add</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">

      <div class="row">
        <div class="col-xs-12">

          {{#if error_msg}}
            <div id="flashMessage" class="alert alert-danger">{{error_msg}}</div>
          {{/if }}
          {{#if success_msg}}
            <div id="flashMessage" class="alert alert-success">{{success_msg}}</div>
          {{/if}}


  <div class="box">
     <h1></h1>
        <form id="basicBootstrapForm" class="form-horizontal" method="post" action="">
         <div class="row">
            <div class="col-xs-12">
              <div class="box-body">

                <div class="box-header with-border">
                    <h3 class="box-title">General</h3>
                </div><br><br>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">Product Name <span style="color:red;font-size:16px;">*</span></label>
                  <div class="col-md-8">
                    <input type="text" class="form-control" name="name">
                  </div>
                </div>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">Status <span style="color:red;font-size:16px;">*</span></label>
                  <div class="col-md-8">
                   <div class="form-group">
                    <div class="col-xs-4">
                     <select name="status" class="form-control select2" style="width: 100%;">
                       <option selected="selected" value="Published">Publish</option>
                       <option value="Draft">Draft</option>
                     </select>
                    </div>
                  </div>
                  </div>
                </div>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">Product Gender <span style="color:red;font-size:16px;">*</span></label>
                  <div class="col-md-8">
                   <div class="form-group">
                    <div class="col-xs-4">
                     <select name="gender" class="form-control select2" style="width: 100%;">
                       <option selected="selected">Select</option>
                       <option value="Men">Men</option>
                       <option value="Women">Women</option>
                       <option value="Boy">Boy</option>
                       <option value="Girl">Girl</option>
                     </select>
                    </div>
                  </div>
                  </div>
                </div>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">Short Description <span style="color:red;font-size:16px;">*</span></label>
                  <div class="col-sm-8">
                    <textarea class="form-control" id="summernote_1" name="short_description" ></textarea>
                  </div>
                </div>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">Description </label>
                  <div class="col-sm-8">
                    <textarea class="form-control" id="summernote_2" name="description" ></textarea>
                  </div>
                </div>



                <div class="form-group">
                  <label  class="col-sm-2 control-label">Brand <span style="color:red;font-size:16px;">*</span></label>
                    <div class="col-md-4 selectContainer">
                     <select name="brand" class="form-control select2" title="Choose 2-4 colors" style="width: 100%;">
                      <option selected="selected">Select</option>
                      {{#each brands}}
                      <option value="{{brand_slug}}">{{brand_name}}</option>
                      {{/each}}
                     </select>
                    </div>
                </div>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">Category <span style="color:red;font-size:16px;">*</span></label>
                    <div class="col-md-4 selectContainer">
                     <select name="category" class="form-control select2" style="width: 100%;">
                      <option selected="selected">Select</option>
                      {{#each categories}}
                      <option value="{{category_slug}}">{{category_name}}</option>
                      {{/each}}
                     </select>
                   </div>
                </div>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">Size <span style="color:red;font-size:16px;">*</span></label>
                    <div class="col-md-4 selectContainer">
                     <select name="size" class="form-control select2" style="width: 100%;">
                      <option selected="selected">Select</option>
                      <option>2</option>
                      <option>2.5</option>
                      <option>3</option>
                      <option>3.5</option>
                      <option>4</option>
                      <option>4.5</option>
                      <option>5</option>
                      <option>5.5</option>
                      <option>6</option>
                      <option>6.5</option>
                      <option>7</option>
                      <option>7.5</option>
                      <option>8</option>
                      <option>8.5</option>
                      <option>9</option>
                      <option>9.5</option>
                      <option>10</option>
                      <option>10.5</option>
                      <option>11</option>
                     </select>
                   </div>
                </div><br>

                <div class="box-header with-border">
                    <h3 class="box-title">Inventory</h3>
                </div><br><br>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">SKU</label>
                  <div class="col-sm-4">
                    <input type="text" class="form-control" name="sku">
                  </div>
                </div>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">Retail Price <span style="color:red;font-size:16px;">*</span></label>
                  <div class="col-sm-4">
                    <input type="text" class="form-control" name="retail">
                  </div>
                </div>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">Sale Price <span style="color:red;font-size:16px;">*</span></label>
                  <div class="col-sm-4">
                    <input type="text" class="form-control"  name="sale">
                  </div>
                </div>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">Stock <span style="color:red;font-size:16px;">*</span></label>
                  <div class="col-sm-4">
                    <input type="text" class="form-control" name="stock">
                  </div>
                </div><br>

                <div class="box-header with-border">
                    <h3 class="box-title">Shipping</h3>
                </div><br><br>

                <div class="form-group">
                  <label  class="col-sm-2 control-label">Weight</label>
                  <div class="col-sm-4">
                    <input type="text" class="form-control" name="weight" >
                  </div>
                </div>
                <div class="form-group">
                  <label  class="col-sm-2 control-label">Length</label>
                  <div class="col-sm-2">
                    <input type="text" class="form-control" name="length" >
                  </div>
                </div>
                <div class="form-group">
                  <label  class="col-sm-2 control-label">Breadth</label>
                  <div class="col-sm-2">
                    <input type="text" class="form-control" name="breadth" >
                  </div>
                </div>
                <div class="form-group">
                  <label  class="col-sm-2 control-label">Height</label>
                  <div class="col-sm-2">
                    <input type="text" class="form-control" name="height" >
                  </div>
                </div><br>

             </div>
              <!-- /.box-body -->
            </div>
          </div>
              <div class="box-footer">
                <a href="../../../../products" class="btn btn-default">Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Submit</button>
              </div>
              <!-- /.box-footer -->
        </form>
          </div>
          <!-- /.box -->
      </div>

      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->

{{> admin/footer}}

</div>
<!-- ./wrapper -->

